<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sfit.sahara.mysahara.details">

    <TimePicker
        android:id="@+id/timePicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:headerBackground="@color/common_google_signin_btn_text_dark_focused" />

    <EditText
        android:id="@+id/outdoor_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gen_code"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:inputType="time"
        android:text="Outdoor time" />

    <Button
        android:id="@+id/gen_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:layout_toStartOf="@+id/add_loc"
        android:text="Generate code" />

    <Button
        android:id="@+id/add_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gen_code"
        android:layout_alignBottom="@+id/gen_code"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="58dp"
        android:text="Add Location" />

</RelativeLayout>
